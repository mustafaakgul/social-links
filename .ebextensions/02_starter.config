container_commands:
  01_migrate:
    command: "python core/manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "python core/manage.py collectstatic --noinput"
  03_createsu:
    command: "python core/manage.py createsu"
    leader_only: true
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "core.settings.local"
    "PYTHONPATH": "/opt/python/current/app/core:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "core/core/wsgi.py"